
style. 
    * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }
style.
    body {
        font-family: &quot;Open Sans&quot;, sans-serif;
    }
style.
    .container {
        padding-left: 15px;
        padding-right: 15px;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        border-radius: 5px;
        text-align:center
    }
style.
    .header {
        display: flex;
        justify-content: space-between;
    }
style.
    .user-content {
        display: flex;
    }
style.
    .image {
        height: 60px;
        width: 60px;
        border-radius: 50%;
        margin-right: 10px;
    }
style.
    .published-at {
        padding-top: 20px;
        font-weight: 600;
        margin-right: 20px;
        /* position: relative;   */
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }
style.
    .name {
        padding-top: 20px;
        font-weight: 600;
        margin-right: 20px;
        position: relative;
    }
style.
    .name::after {
        content: &quot;&quot;;
        position: absolute;
        background-color: rgba(0, 0, 0, 0.726);
        height: calc(100% - 10px);
        width: 3px;
        top: 3px;
        margin-left: 10px;
    }
style.
    .title {
        padding-top: 20px;
        font-size: 15px;
    }
style.
    .bullets {
        display: flex;
        flex-direction: column;
        margin-top: 15px;
    }
style.
    .bullets span {
        background-color: #333;
        width: 5px;
        height: 5px;
        border-radius: 50%;
        margin-bottom: 3px;
    }
style.
    .content {
        margin-top: 70px;
    }
style.
    .content h2 {
        font-weight: 600;
    }
style.
    .content p {
        margin-left: 10px;
        line-height: 1.7;
        text-align: left;
    }