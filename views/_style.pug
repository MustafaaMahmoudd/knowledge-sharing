// Body styles
style.
  body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
  }

// Container styles
style.
  .container {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

// Header styles
style.
  h1 {
    color: #333;
  }

// Paragraph styles
style.
  p {
    color: #555;
  }

// Code styles
style.
  h2 strong {
    font-size: 24px;
    color: #007bff; /* Change color as needed */
  }

// Signature styles
style.
  .signature {
    font-style: italic;
    color: #888;
  }

// Media query for responsiveness
style.
  @media screen and (max-width: 600px) {
    .container {
      width: 100%;
      margin: 0 auto;
      padding: 10px;
    }
  }
